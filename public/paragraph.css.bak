/* Exam title and subtitle styles */
#exam-title {
    text-align: center;
    margin-bottom: 2rem;
}

#exam-title h2 {
    color: #2c3e50;
    margin-bottom: 0.5rem;
}

.exam-subtitle {
    color: #000000;
    font-size: 1.2rem;
    text-align: left;
    line-height: 1.2;
    font-weight: 400;
}

/* Add colon alignment for name-value pairs in subtitles */
.exam-subtitle {
    display: table;
}

.exam-subtitle br + * {
    display: table-row;
}

.exam-subtitle span:first-child {
    display: table-cell;
    padding-right: 10px;
    white-space: nowrap;
}

.exam-subtitle span:last-child {
    display: table-cell;
    text-align: left;
}